<% layout("/layouts/boilerplate.ejs") %>
<body>
    
    <form  method="post" class="needs-validation" novalidate action="/listings/<%= listing._id %>?_method=PUT">
      <div class="row ">
        <div class="col-8 offset-2">
            <h3 > Edit you new listing</h3>
            <div class="mb-3">
                <label for="tilte" class="form-label">Title</label>
                <input type="text" name="listing[title]" required class="form-control "value="<%= listing.title %>">
                <div class="invalid-feedback">
                    Invalid
                    </div>
                 </div>
           
           <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  required  class="form-control"><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Invalid
                </div>
            </div>
           
            <div class="mb-3" >
                <label for="image" class="form-label">Image</label>
                <input type="text" name="listing[image]"  required class="form-control"value="<%= listing.image.url %>">
                <div class="invalid-feedback">
                    Invalid
                    </div>
                 </div>
            <div class="row">
                <div class="mb-3 col-md-4" >
                    <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" required class="form-control"value="<%= listing.price %>">
            <div class="invalid-feedback">
                Invalid
                </div>
              </div>
        
                <div class="mb-3 col-md-8">
                   <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" required class="form-control "value="<%= listing.country %>">
                <div class="invalid-feedback">
                    Invalid
                    </div>
                 </div>
          
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" required class="form-control"value="<%= listing.location %>">
                <div class="invalid-feedback">
                    Invalid
                    </div>
                  </div class="mb-3">
           
           
           
            <br><br>
            <button class="btn btn-dark">Edit</button>
        </div>
      </div>
    </form>

    <script src="/js/script.js"></script>
</body>
